<div class="login-back">
  <div class="container-fluid">
    <div class="row">
      <div class="log-in-form col-sm-5 col-xl-3">
        <h1 class="text-center log-in">Log In</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter email", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", placeholder:"Enter password", class:"form-control" %>
          </div>

          <div class="form-check">
          <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me, class:"form-check-input"%>
              <%= f.label :remember_me, class:"form-check-label"%>
          <% end -%>
        </div><br>

        <button type="submit" class="btn btn-primary btn-block">
          Log In <%= icon "sign-in" %>
        </button><br>

        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
</div>
